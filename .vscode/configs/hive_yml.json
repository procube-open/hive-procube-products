{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "plugin": {
      "type": "string",
      "enum": [
        "hive_inventory"
      ]
    },
    "stages": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "private": {
          "$ref": "#/definitions/stage_def"
        },
        "staging": {
          "$ref": "#/definitions/stage_def"
        },
        "production": {
          "$ref": "#/definitions/stage_def"
        }
      }
    }
  },
  "definitions": {
    "stage_def": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "provider": {
          "type": "string",
          "enum": [
            "vagrant",
            "gcp",
            "aws",
            "azure",
            "kickstart",
            "prepared"
          ]
        },
        "cidr": {
          "type": "string",
          "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/(3[0-2]|[1-2][0-9]|[0-9]))?$"
        },
        "internal_cidr": {
          "type": "string",
          "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/(3[0-2]|[1-2][0-9]|[0-9]))?$"
        },
        "separate_repository": {
          "type": "boolean"
        },
        "number_of_hosts": {
          "type": "number"
        },
        "ip_address_list": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
          }
        },
        "disk_size": {
          "type": "number"
        },
        "repository_disk_size": {
          "type": "number"
        },
        "mirrored_disk_size": {
          "type": "number"
        },
        "root_password": {
          "type": "string"
        },
        "name_servers": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
          }
        },
        "custom_hostname": {
          "type": "string"
        },
        "memory_size": {
          "type": "number"
        },
        "repository_memory_size": {
          "type": "number"
        },
        "cpus": {
          "type": "number"
        },
        "bridge": {
          "type": "string"
        },
        "dev": {
          "type": "string"
        },
        "instance_type": {
          "type": "string"
        },
        "repository_instance_type": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "disk_encrypted": {
          "type": "boolean"
        },
        "repository_disk_encrypted": {
          "type": "boolean"
        },
        "mirrored_disk_encrypted": {
          "type": "boolean"
        },
        "kms_key_id": {
          "type": "string"
        },
        "image_name": {
          "type": "string"
        },
        "filestore_cidr": {
          "type": "string",
          "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/(3[0-2]|[1-2][0-9]|[0-9]))?$"
        },
        "iso_src": {
          "type": "string"
        },
        "iso_dest": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "subnets": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "cidr": {
                "type": "string",
                "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/(3[0-2]|[1-2][0-9]|[0-9]))?$"
              },
              "available_zone": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            }
          }
        },
        "networks": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "interface": {
                "type": "string"
              },
              "gateway": {
                "type": "string",
                "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
              },
              "nameservers": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
                }
              },
              "ips": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
                }
              },
              "netmask": {
                "type": "string",
                "pattern": "^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$"
              },
              "vlanid": {
                "type": "number"
              },
              "bonding_interfaces": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "shared_repository": {
          "type": "object",
          "properties": {
            "context_dir": {
              "type": "string"
            },
            "dns_address": {
              "type": "string"
            },
            "ssh_port": {
              "type": "number"
            }
          }
        }
      }
    }
  }
}