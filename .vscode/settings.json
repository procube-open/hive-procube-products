{
    "python.analysis.typeCheckingMode": "standard",
    "autopep8.args": [
        "--max-line-length=200"
    ],
    "ansible.ansible.useFullyQualifiedCollectionNames": true,
    "ansible.validation.lint.enabled": true,
    "yaml.format.enable": true,
    "yaml.completion": true,
    "yaml.validate": true,
    "yaml.hover": true,
    "yaml.schemas": {
        ".vscode/configs/hive_yml.json": "inventory/hive.yml",
        ".vscode/configs/services_yml.json": [
            "inventory/*.yml",
            "!inventory/hive.yml"
        ]
    }
}